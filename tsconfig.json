{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // üõ°Ô∏è STRICTNESS LEVEL 100 üõ°Ô∏è
    "strict": true,
    "noImplicitAny": true, // "Type it or delete it"
    "strictNullChecks": true, // No "undefined" surprises

    // Recommended additions for "Level 100" (The "Delete it" enforcement):
    "noUnusedLocals": true, // Error if you define a var and don't use it
    "noUnusedParameters": true, // Error if you define a function arg and don't use it
    "noFallthroughCasesInSwitch": true,

    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@snailicide/shared": ["./packages/shared/src/index.ts"],
      "@snailicide/build-config": ["./packages/build-config/index.js"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./packages/shared" }, { "path": "./packages/build-config" }]
}
