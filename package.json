{
  "name": "@camp_candor/primary_deployment",
  "version": "0.0.0",
  "private": true,
  "description": "Snailicide Monorepo (Agent Optimized)",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "//__ ğŸ›‘ GUARDRAILS _______________________": "",
    "commit": "echo 'âŒ STOP: Use `git commit -m \"type: msg\"` directly.' && exit 1",
    "commit:human": "npm run commit:before && npx git-cz",
    "//__ ğŸš€ DEV (Parallel) ___________________": "",
    "dev": "concurrently -n \"shared,build-config\" -c \"bgBlue,bgMagenta\" \"npm run dev --workspace=@snailicide/shared\" \"npm run dev --workspace=@snailicide/build-config\"",
    "dev:note": "echo 'â„¹ï¸ AGENT: When creating new apps, add them to the dev script above.'",
    "//__ ğŸ—ï¸ BUILD (Type Safe) ________________": "",
    "build": "tsc --build",
    "build:force": "tsc --build --force",
    "//__ ğŸ› ï¸ MAINTENANCE ______________________": "",
    "prepare": "husky",
    "commit:before": "npm run build && npm run lint:staged",
    "test": "npm run test --workspaces --if-present",
    "//__ ğŸ§¹ CODE QUALITY ______________________": "",
    "check": "npm run check:all",
    "fix": "npm run fix:all",
    "check:all": "npm run prettier:check && npm run lint:check",
    "fix:all": "npm run prettier:fix && npm run lint:fix",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "npx lint-staged --relative --debug",
    "prettier:check": "prettier . --check --ignore-path .gitignore",
    "prettier:fix": "prettier . --write --ignore-path .gitignore",
    "//__ ğŸ“¦ VERSIONING _______________________": "",
    "changeset": "npx changeset",
    "version": "npx changeset version && npm install",
    "//__ â˜¢ï¸ RESET ____________________________": "",
    "clean": "npm run clean:dist && npm run clean:ts",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "clean:ts": "find . -name '*.tsbuildinfo' -type f -delete",
    "uninstall": "npm run clean && rm -f package-lock.json && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "reset": "npm run uninstall && npm install && npm run build"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.0.0",
    "concurrently": "^8.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "markdownlint-cli2": "^0.13.0",
    "prettier": "^3.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.0.0",
    "zod": "^3.22.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
